			<aop:after-returning pointcut-ref="save" method="after"/>
		</aop:aspect>
	</aop:config>
	-->
	<!-- <bean id="populator" class="com.love.morec.application.channel.ChannelClassifierPopulator" /> -->
	<bean id="entityService" class="com.love.morec.application.entity.impl.EntityServiceImpl">
		<property name="rangeScope" value="4096" />
		<property name="joinQueryRequestMilliSeconds" value="1000" />
	</bean>
	
	<bean id="solrServer" class="org.apache.solr.client.solrj.impl.CommonsHttpSolrServer">
	 	<constructor-arg index="0" value="http://localhost:8888/solr/MORECCC_CORE_ALL" />
		<property name="connectionTimeout" value="3000"/>
		<property name="soTimeout" value="3000"/>
		<property name="maxRetries" value="1"/>
		<property name="followRedirects" value="false"/>
		<property name="maxTotalConnections" value="200"/>
		<property name="defaultMaxConnectionsPerHost" value="200"/>
	</bean>
	
	<bean id="entityCommentService" class="com.love.morec.application.entity.impl.EntityCommentServiceImpl"></bean>
	<bean id="commentSolrServer" class="org.apache.solr.client.solrj.impl.CommonsHttpSolrServer">
	 	<constructor-arg index="0" value="http://localhost:8888/solr/MORECCC_COMMENT_CACHE/" />
		<property name="connectionTimeout" value="3000"/>
		<property name="soTimeout" value="3000"/>
		<property name="maxRetries" value="1"/>
		<property name="followRedirects" value="false"/>
		<property name="maxTotalConnections" value="200"/>
		<property name="defaultMaxConnectionsPerHost" value="200"/>
	</bean>
	
	<bean id="entityDescService" class="com.love.morec.application.entity.impl.EntityDescServiceImpl"></bean>
	<bean id="descSolrServer" class="org.apache.solr.client.solrj.impl.CommonsHttpSolrServer">
	 	<constructor-arg index="0" value="http://localhost:8888/solr/MORECCC_DESC_CACHE/" />
		<property name="connectionTimeout" value="3000"/>
		<property name="soTimeout" value="3000"/>
		<property name="maxRetries" value="1"/>
		<property name="followRedirects" value="false"/>
		<property name="maxTotalConnections" value="200"/>
		<property name="defaultMaxConnectionsPerHost" value="200"/>
	</bean>	
	
	<!-- 支持文件上传 -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver"></bean>
	

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.love.morec.log">

	<resultMap type="Log" id="logResult">
		<id property="id" column="id" />
		<result property="user" column="user" />
		<result property="date" column="date" jdbcType="TIMESTAMP" />
		<result property="content" column="content" />
	</resultMap>

	<sql id="queryLog">
		select log.* from cms_log log 
	</sql>

	<select id="queryPage" resultMap="logResult">
		<include refid="queryLog" />
		order by log.date desc
	</select>

	<select id="queryLogs" resultMap="logResult">
		<include refid="queryLog" />
	</select>

	<delete id="deleteById">
		delete from cms_log where id=#{id}
	</delete>

	<!-- 日期查询 -->
	<select id="queryLogsByDate" resultMap="logResult">
		<include refid="queryLog" />
		where <![CDATA[date >= ${params.startDate} and date <= ${params.endDate}]]>
		order by log.date desc
	</select>

	<insert id="save" keyProperty="id" useGeneratedKeys="true">
		insert into
		cms_log(id,user,date,content) values
		(#{id},#{user},#{date},#{content})
	</insert>

</mapper>
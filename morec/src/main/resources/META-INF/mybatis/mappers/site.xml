<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.love.morec.site">
<resultMap type="Site" id="siteResult">
	<id property="id" column="id"/>
	<result property="descr" column="descr"/>
	<result property="name" column="name"/>
	<result property="copyRight" column="copy_right"/>
</resultMap>

<sql id="querySite">
	select self.* from cms_site self
</sql>
<insert id="save" keyProperty="id" useGeneratedKeys="true" >
	insert into cms_site(name,descr,copy_right)
				values(#{name},#{descr},#{copyRight})
</insert>
<update id="update" >
	update cms_site
			set name=#{name},descr=#{descr},copy_right=#{copyRight}
			where id=#{id}
</update>
<select id="queryPage" resultMap="siteResult">
	<include refid="querySite"/>
	order by self.id asc
</select>
<select id="get" resultMap="siteResult">
	<include refid="querySite"/>
	where self.id=#{id}
</select>
<delete id="deleteById" >
	delete from cms_site where id=#{id}
</delete>
</mapper>
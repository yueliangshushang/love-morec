<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.love.morec.template">
<resultMap type="Template" id="templateResult">
	<id property="id" column="id"/>
	<result property="name" column="name"/>
	<result property="fileName" column="file_name"/>
	<result property="content" column="content"/>
	<result property="physicalUrl" column="physical_url"/>
	<result property="sort" column="sort"/>
	<result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
</resultMap>
<sql id="queryTemplate">
	select template.* from cms_template template 
</sql>

<insert id="save" keyProperty="id" useGeneratedKeys="true" >
	insert into cms_template(id,name,file_name,content,physical_url,sort,update_time)
				values(#{id},#{name},#{fileName},#{content},#{physicalUrl},#{sort},#{updateTime})
</insert>
<update id="update" >
	update cms_template 
			set name=#{name},file_name=#{fileName},content=#{content},physical_url=#{physicalUrl},sort=#{sort},update_time=#{updateTime} 
			where id=#{id}
</update>
<select id="queryPage" resultMap="templateResult">
	<include refid="queryTemplate"/>
	 order by template.sort
</select>
<delete id="delete" >
	delete from cms_template where id=#{id}
</delete>
<delete id="deleteById" >
	delete from cms_template where id=#{id}
</delete>
<select id="get" resultMap="templateResult">
	<include refid="queryTemplate"/>
	where template.id=#{id}
</select>
<select id="queryTemplates" resultMap="templateResult">
	<include refid="queryTemplate"/>
</select>
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.love.morec.category">

	<resultMap type="Category" id="categoryResult">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="path" column="path" />
		<association property="father" column="father_id" javaType="Category" resultMap="fatherCategoryResult" />		
		<collection property="children" ofType="Category" resultMap="childrenCategoryResult"/>
		<collection property="channel" ofType="Category" javaType="Channel" resultMap="channelResult"/>
	</resultMap>
	
	<resultMap type="Category" id="fatherCategoryResult">
		<id property="id" column="father_id"/>
		<result property="name" column="father_name"/>
		<result property="path" column="father_path"/>
    </resultMap>
    
    <resultMap type="Category" id="childrenCategoryResult">
		<id property="id" column="child_id"/>
		<result property="name" column="child_name"/>
		<result property="path" column="child_path"/>
	</resultMap>
	
	<resultMap type="Channel" id="channelResult">
		<id property="id" column="channel_id"/>
		<result property="name" column="name"/>
		<result property="path" column="path"/>
		<result property="sort" column="sort"/>
		<result property="tags" column="tags"/>
		<result property="title" column="title"/>
		<result property="hotKeyWord" column="hotKeyWord"/>
		<result property="metaTitle" column="metaTitle"/>
		<result property="metaKeyWord" column="metaKeyWord"/>
		<result property="metaDescr" column="metaDescr"/>
		<result property="anchorText" column="anchorText"/>
		<result property="attributes" column="attributes"/>
    </resultMap>
    
    <sql id="commonSelect">
	select   
		self.*,
		father.id as father_id,
		father.name as father_name,
		father.path as father_path,
		children.id as child_id,
		children.name as child_name,
		children.path as child_path,
		channel.*
	from cms_category self
	left join cms_category father on self.father_id=father.id 
	left join cms_category children on self.id=children.father_id
	left join cms_channel channel on self.channel_id=channel.id	
	</sql>
	
	<insert id="save" keyProperty="id" useGeneratedKeys="true" >
		insert into cms_category(name,path,father_id,channel_id)
					values(#{name},#{path},#{father.id},#{channel_id})
	</insert>
	
	<update id="update" >
		update cms_category
				set name=#{name},path=#{path},father_id=#{father.id},channel_id=#{channel.id}}
				where id=#{id}		
	</update>
		
	<delete id="delete" >
		delete from cms_category where id=#{id}
	</delete>
	
	<select id="delbefore" resultMap="categoryResult">
		<include refid="commonSelect"/> 
		where category.id is not null and  self.id=#{id}  
	</select>
	
	<delete id="deleteById" >
		delete from cms_category where id=#{id}
	</delete>
	
	<select id="queryUniqueByID" resultMap="categoryResult">
		 <include refid="commonSelect"/>
		where self.id=#{id}
	</select>
	<select id="queryUniqueByName" parameterType="string" resultMap="categoryResult">
		 <include refid="commonSelect"/>
		where self.name=#{name}
	</select>
	<select id="get" resultMap="categoryResult">
		<include refid="commonSelect"/>
		where self.id=#{id}
	</select>
	
	<select id="queryTop" resultMap="categoryResult">
		select   
			self.*,
			children.id as child_id,
			children.name as child_name,
			children.path as child_path
		from cms_category self 
		left join cms_category children on self.id=children.father_id 
		where self.father_id is null
	</select>
	
	<select id="queryPageTop" resultMap="categoryResult">
		select  self.*
		from cms_category self 
		where self.father_id is null
	</select>
	
	<select id="queryChildById" resultMap="categoryResult">
		<include refid="commonSelect"/> 
		where self.father_id=#{id}
	</select>
	
	<select id="queryPageChildById" resultMap="categoryResult">
		select  self.*
		from cms_category self 
		where self.father_id=#{params.id}
	</select>
	
	<select id="queryCategorys" resultMap="categoryResult">
		<include refid="commonSelect"/> 
	</select>
</mapper>